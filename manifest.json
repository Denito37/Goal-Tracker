{
    "manifest_version": 2,
    "name": "Goal Tracker",
    "version": "1.0",
    "description": "A browser extension to track your goals",
    
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },

    "permissions": [
        "storage",
        "clipboardWrite",
        "clipboardRead"
    ],

    "sidebar_action": {
        "default_icon": {
            "16": "icons/icon-16.png",
            "32": "icons/icon-32.png",
            "48": "icons/icon-48.png",
            "128": "icons/icon-128.png"
        },
        "default_title": "Goal Tracker",
        "default_panel": "sidebar/index.html"
    },

    "background": {
        "scripts": [
            "background/background.ts"
        ],
        "persistent": false
    },
    
    "commands": {
        "_execute_sidebar_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+Y"
            }
        }
    }
}