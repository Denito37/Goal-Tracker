{
    "manifest_version": 2,
    "name": "Goal Tracker",
    "version": "1.0",
    "description": "A browser extension to track your goals",
    
    "icons": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png"
    },

    "permissions": [
        "storage",
        "sidePanel"
    ],
    
    "action": {
        "default_icon": {
            "48": "icons/icon-48.png",
            "96": "icons/icon-96.png"
        },
        "default_title": "Goal Tracker",
        "default_popup": "popup/index.html"
    },

    "side_panel": {
        "default_path": "sidebar/index.html"
    },

    "sidebar_action": {
        "default_icon": {
            "48":"icons/icon-48.png",
            "96":"icons/icon-96.png"
        },
        "default_title": "Goal Tracker",
        "default_panel": "sidebar/index.html"
    },

    "background": {
        "scripts": [
            "background/background.ts"
        ],
        "persistent": false
    }
}