{
    "manifest_version": 2,
    "name": "Goal Tracker",
    "version": "1.0",
    "description": "A browser extension to track your goals",
    

    "permissions": [
        "storage",
        "clipboardWrite",
        "clipboardRead"
    ],

    "sidebar_action": {
        "default_title": "Goal Tracker",
        "default_panel": "sidebar/index.html"
    },

    "background": {
        "scripts": [
            "background/background.ts"
        ],
        "persistent": false
    },
    
    "commands": {
        "_execute_sidebar_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+Y"
            }
        }
    }
}